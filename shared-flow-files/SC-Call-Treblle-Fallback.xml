<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout continueOnError="false" enabled="true" name="{YOUR_SERVICE_CALL_OUT_NAME}">
    <DisplayName>{YOUR_SERVICE_CALL_OUT_NAME}</DisplayName>
    <Request clearPayload="true">
        <Set>
            <Headers>
                <Header name="Content-Type">application/json</Header>
                <Header name="x-api-key">{treblle_api_key}</Header>
                <Header name="User-Agent">Apigee-plugin-treblle</Header>
            </Headers>
            <Payload contentType="application/json">{treblle_payload}</Payload>
            <Verb>POST</Verb>
        </Set>
    </Request>
    <Response>treblle_response</Response>
    <HTTPTargetConnection>
        <URL>https://{treblle.fallback.host}</URL>
    </HTTPTargetConnection>
</ServiceCallout>